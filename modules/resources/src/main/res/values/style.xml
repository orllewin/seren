<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="default_title" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/oppen_default</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/titleColour</item>
    </style>

    <style name="gemtext_default" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/oppen_default</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="gemtext_header_large" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/oppen_default_title</item>
        <item name="android:textSize">@dimen/gemtext_h1</item>
        <item name="android:textColor">@color/titleColour</item>
    </style>

    <style name="gemtext_header_medium" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/oppen_default_title</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/titleColour</item>
    </style>

    <style name="gemtext_header_small" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/oppen_default_title</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/titleColour</item>
    </style>

    <style name="modern_dialog" parent="@style/Theme.MaterialComponents.Dialog">
        <item name="dialogCornerRadius">16dp</item>
    </style>

    <style name="modern_material_dialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="textAllCaps">false</item>
        <item name="shapeAppearanceOverlay">@style/round_corners</item>

    </style>

    <style name="round_corners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="UrlAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">14sp</item>
    </style>
</resources>