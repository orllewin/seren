<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="ResourcesMainTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/oppen_default</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:dialogTheme">@style/ResourcesDialogTheme</item>
        <item name="android:alertDialogTheme">@style/ResourcesDialogTheme</item>
        <item name="alertDialogTheme">@style/ResourcesDialogTheme</item>
        <item name="dialogTheme">@style/ResourcesDialogTheme</item>
    </style>

    <style name="ResourcesMainWithActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/oppen_default</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:dialogTheme">@style/ResourcesDialogTheme</item>
        <item name="android:alertDialogTheme">@style/ResourcesDialogTheme</item>
        <item name="alertDialogTheme">@style/ResourcesDialogTheme</item>
        <item name="dialogTheme">@style/ResourcesDialogTheme</item>
    </style>

    <style name="ResourcesDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="dialogCornerRadius">16dp</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>